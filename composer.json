{
    "name": "shegun-babs/flutterwave-php",
    "description": "Convenient PHP package for the Flutterwave API",
    "keywords": [
        "shegun-babs",
        "flutterwave"
    ],
    "homepage": "https://github.com/shegun-babs/flutterwave-php",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Shegun Babs",
            "email": "shegun.babs@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*",
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "pestphp/pest-plugin-mock": "^1.0",
        "phpstan/phpstan": "^0.12.99",
        "phpunit/phpunit": "^9.3.7"
    },
    "autoload": {
        "psr-4": {
            "Flutterwave\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flutterwave\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
